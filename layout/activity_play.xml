<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <TextView
        android:id="@+id/head_text_quest"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"

        android:text=""
        android:textColor="@color/black"
    />

    <Button
        android:id="@+id/button_yes"
        android:layout_below="@+id/head_text_quest"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"
        android:layout_marginStart="80dp"

        android:text="@string/play_yes_text"
    />

    <Button
        android:id="@+id/button_no"
        android:layout_below="@+id/head_text_quest"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"

        android:text="@string/play_no_text"
    />

    <Button
        android:id="@+id/button_back"
        android:layout_below="@+id/button_yes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="100dp"

        android:text="@string/play_back_text"
    />

</RelativeLayout>